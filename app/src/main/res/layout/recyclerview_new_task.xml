<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_order_item"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:translationZ="10dp"
    android:padding="15dp"
    android:background="@drawable/round_all_around_but_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_orderid"
            style="@style/dark_azure_text_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order ID" />

        <TextView
            android:id="@+id/tv_orderid_value"
            style="@style/grey_text_smol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Loading..." />

        <TextView
            android:id="@+id/tv_createdat"
            style="@style/dark_azure_text_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order placed at" />

        <TextView
            android:id="@+id/tv_createdat_value"
            style="@style/grey_text_smol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Loading..." />

        <TextView
            android:id="@+id/tv_custname"
            style="@style/dark_azure_text_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name" />

        <TextView
            android:id="@+id/tv_custname_value"
            style="@style/grey_text_smol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Loading..." />

        <TextView
            android:id="@+id/tv_custaddr"
            style="@style/dark_azure_text_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Address" />

        <TextView
            android:id="@+id/tv_custaddr_value"
            style="@style/grey_text_smol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Loading..." />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_assign_pickup"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Assign Pickup"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_assign_delivery"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Assign Delivery"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>